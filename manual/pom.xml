<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>be.fgov.kszbcss.rhq</groupId>
        <artifactId>rhq</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>manual</artifactId>
    <name>Manual</name>
    <build>
        <plugins>
            <plugin>
                <groupId>com.agilejava.docbkx</groupId>
                <artifactId>docbkx-maven-plugin</artifactId>
                <version>2.0.11</version>
                <executions>
                    <execution>
                        <id>pdf</id>
                        <goals>
                            <goal>generate-pdf</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <includes>*.xml</includes>
                            <foCustomization>src/docbkx/xsl/fo.xsl</foCustomization>
                            <!-- TODO: this is to work around an issue in multi-module builds -->
                            <draftWatermarkImage>src/docbkx/draft.png</draftWatermarkImage>
                            <!-- xincludeSupported>true</xincludeSupported -->
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.docbook</groupId>
                        <artifactId>docbook-xml</artifactId>
                        <version>4.4</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
